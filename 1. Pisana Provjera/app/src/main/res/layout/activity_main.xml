<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonPromjena"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:onClick="changeTextView"
        android:text="Click"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editTextInsert"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:hint="UpiÅ¡i tekst" />

    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="TEST TEXT"
        android:textSize="22dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttonJedan"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:onClick="changePrvuSliku"
        android:text="Slika1"
        android:textStyle="bold"
        android:textSize="22dp" />

    <Button
        android:id="@+id/buttonDva"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:onClick="changeDruguSliku"
        android:text="Slika2"
        android:textStyle="bold"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageViewSlika"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/github" />
</LinearLayout>